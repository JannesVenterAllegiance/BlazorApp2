<MBAnchor />
@page "/"

@using System.IO

<img src="/images/pic.jpg" width="50px" />

<MBButton ButtonStyle="@MBButtonStyle.Outlined"
          Label="Client"
          @onclick="@(() => Click(0))" />

<MBButton ButtonStyle="@MBButtonStyle.Outlined"
          Label="Spouse"
          @onclick="@(() => Click(1))" />

@if (i == 0)
{
    <MudCard>
        <MudCardContent>
            <MudForm>
                <MudTextField @bind-Value="client.Name"
                              Immediate="true"
                              Label="Name" />
                <MudTextField @bind-Value="client.Name"
                              Immediate="true"
                              Label="Surname" />
                <MudDatePicker Label="Date of birth" @bind-Text="client.DOB" />
                <MudSelect T="Client.EGender" @bind-Value="client.Gender" Label="Gender">
                    @foreach (var gender in Client.EGender.GetValues(typeof(Client.EGender)))
                    {
                        <MudSelectItem T="Client.EGender" value="@gender"/>
                    }
                </MudSelect>
            </MudForm>
        </MudCardContent>
    </MudCard>
}
else
{
    <MudCard>
        <MudCardContent>
            <MudForm>
                <MudTextField @bind-Value="client.SName"
                              Immediate="true"
                              Label="Name" />
                <MudTextField @bind-Value="client.SSurname"
                              Immediate="true"
                              Label="Surname" />
                <MudDatePicker Label="Date of birth" @bind-Text="client.SDOB" />
                <MudSelect T="Client.EGender" @bind-Value="client.SGender" Label="Gender">
                    @foreach (var gender in Client.EGender.GetValues(typeof(Client.EGender)))
                    {
                        <MudSelectItem T="Client.EGender" value="@gender" />
                    }
                </MudSelect>
            </MudForm>
        </MudCardContent>
    </MudCard>
}

@code {
    public int i { get; set; }
    Client client = new Client(Guid.NewGuid(), null, null, null, null, Client.EGender.Other, null, null, null, Client.EGender.Other);

    private void Click(int index)
    {
        i = index;
    }

}